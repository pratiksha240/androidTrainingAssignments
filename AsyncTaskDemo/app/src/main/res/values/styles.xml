<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/cardView</item>
        <item name="imageviewStyle">@style/imageView</item>
        <item name="textviewStyle">@style/itemTextview</item>
        <item name="itemTitle">@style/itemTitle</item>
    </style>

    <style name="AlbumTheme" parent="AppTheme">
        <item name="colorPrimary">@color/newcolorPrimary</item>
        <item name="colorPrimaryDark">@color/newcolorPrimaryDark</item>
        <item name="colorAccent">@color/newcolorAccent</item>
        <item name="textviewStyle">@style/AlbumitemTextview</item>
        <item name="imageviewStyle">@style/AlbumImageview</item>
        <item name="cardViewStyle">@style/AlbumcardView</item>
    </style>

    <style name="ArtistTheme" parent="AppTheme">
        <item name="colorPrimary">@color/newcolorPrimary</item>
        <item name="colorPrimaryDark">@color/newcolorPrimaryDark</item>
        <item name="colorAccent">@color/newcolorAccent</item>
        <item name="textviewStyle">@style/AlbumitemTextview</item>
        <item name="imageviewStyle">@style/ArtistImageview</item>
        <item name="cardViewStyle">@style/ArtistcardView</item>
    </style>

    <style name="TrackTheme" parent="AppTheme">
        <item name="textviewStyle">@style/TrackitemTextview</item>
        <item name="imageviewStyle">@style/TrackImageview</item>
        <item name="cardViewStyle">@style/TrackcardView</item>
    </style>
</resources>
