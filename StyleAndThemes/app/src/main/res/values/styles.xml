<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="textcolor">#ff4040</item>
        <item name="height">150dp</item>
        <item name="width">300dp</item>
    </style>

    <style name="MyThem"  parent="AppTheme">
        <item name="android:gravity">center_horizontal</item>
        <item name="textcolor">#FFFEFB</item>
        <item name="android:background">#040001</item>
        <item name="height">300dp</item>
        <item name="width">300dp</item>
    </style>

</resources>
